@{
    string usuario = Context.Session.GetString("USUARIO");
}

@if (usuario == null)
{
    <li class="nav-item">
        <a asp-controller="Home" asp-action="LogIn" class="nav-link">Log in</a>
    </li>

}
else
{
    <li class="nav-item">
        <a asp-controller="Home" asp-action="CloseSession" class="nav-link text-danger">
            Sign out @usuario
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">
            Mi perfil
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">
            Mis pedidos
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">
            Comentarios
        </a>
    </li>
}